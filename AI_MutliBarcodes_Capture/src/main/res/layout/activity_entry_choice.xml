<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryChoiceActivity"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbEntry"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:textAlignment="center"
        android:theme="@style/Theme.MultiBarcodesCapture_AB"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"
        android:backgroundTint="@color/zebra"/>

    <Button
        android:id="@+id/btStartCapture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/zebra"
        android:enabled="false"
        android:text="@string/start_capture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/btLoadLastSession"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/zebra"
        android:enabled="true"
        android:text="@string/load_last_session"
        app:layout_constraintTop_toBottomOf="@id/btStartCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/b_create_new_session"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/zebra"
        android:text="@string/create_new_session"
        app:layout_constraintTop_toBottomOf="@id/btLoadLastSession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/selected_session"
        android:backgroundTint="@color/zebra"
        android:background="@color/zebra"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/txtSession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/select_session_to_start"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
