<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Background with edit and trash icons (shown when swiped) -->
    <LinearLayout
        android:id="@+id/background_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">

        <!-- Edit icon with Zebra background -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/zebra"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/edit_item"
                android:src="@drawable/ic_edit_white_24dp" />

        </LinearLayout>

        <!-- Delete icon with red background -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#FF4444"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/trash_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/delete_item"
                android:src="@drawable/ic_delete_white_24dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Foreground content (the actual barcode item) -->
    <LinearLayout
        android:id="@+id/foreground_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/barcode_symbology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/barcode_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/barcode_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>