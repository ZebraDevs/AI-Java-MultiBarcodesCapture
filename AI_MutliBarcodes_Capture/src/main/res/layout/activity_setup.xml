<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity"
    android:theme="@style/Theme.MultiBarcodesCapture">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbSetup"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Setup"
        app:titleTextColor="@color/white"
        android:backgroundTint="@color/zebra"/>

    <LinearLayout
        android:id="@+id/llPrefix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbSetup"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="PrÃ©fixe:" />

        <EditText
            android:id="@+id/etPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Prefix_" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llPrefix"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Type de fichier" />

        <RadioGroup
            android:id="@+id/rbFileType"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rbTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fichier Texte" />

            <RadioButton
                android:id="@+id/rbCSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fichier CSV"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/rbXSLX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fichier Excel"
                android:visibility="visible" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/zebra"
            android:text="Valider" />

        <Button
            android:id="@+id/btCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/zebra"
            android:text="Annuler" />
    </LinearLayout>
</RelativeLayout>