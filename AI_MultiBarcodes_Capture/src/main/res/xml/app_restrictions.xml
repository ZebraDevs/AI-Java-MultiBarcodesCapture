<?xml version="1.0" encoding="utf-8"?>
<restrictions xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- File Prefix Configuration -->
    <restriction
        android:key="prefix"
        android:title="File Prefix"
        description="Default prefix for exported files"
        android:restrictionType="string"
        android:defaultValue="MySession_" />

    <!-- Export File Type Configuration -->
    <restriction
        android:key="extension"
        android:title="Export File Type"
        description="Default file type for exports"
        android:restrictionType="choice"
        android:defaultValue=".txt"
        android:entries="@array/export_file_types"
        android:entryValues="@array/export_file_values" />

    <!-- Language Configuration -->
    <restriction
        android:key="language"
        android:title="Application Language"
        description="Default language for the application interface"
        android:restrictionType="choice"
        android:defaultValue="system"
        android:entries="@array/language_names"
        android:entryValues="@array/language_codes" />

    <!-- Processing Mode Configuration -->
    <restriction
        android:key="processing_mode"
        android:title="Processing Mode"
        description="Select whether to save barcode data to files or send to HTTP/HTTPS endpoint"
        android:restrictionType="choice"
        android:defaultValue="file"
        android:entries="@array/processing_mode_names"
        android:entryValues="@array/processing_mode_values" />

    <!-- HTTP/HTTPS Configuration (Nested Bundle) -->
    <restriction
        android:key="https_configuration"
        android:title="HTTP/HTTPS Configuration"
        description="Configure HTTP/HTTPS endpoint settings"
        android:restrictionType="bundle">

        <!-- HTTPS Endpoint Configuration -->
        <restriction
            android:key="https_endpoint"
            android:title="HTTP/HTTPS Endpoint"
            description="Server endpoint URL for uploading barcode data (e.g., http://192.168.1.100:3500/api/barcodes.php)"
            android:restrictionType="string"
            android:defaultValue="" />


    </restriction>

    <!-- Barcode Symbologies Configuration (Nested Bundle) -->
    <restriction
        android:key="barcode_symbologies"
        android:title="Barcode Symbologies"
        description="Configure which barcode symbologies are enabled"
        android:restrictionType="bundle">

        <!-- Postal Barcodes -->
        <restriction
            android:key="AUSTRALIAN_POSTAL"
            android:title="Australian Postal"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="CANADIAN_POSTAL"
            android:title="Canadian Postal"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="DUTCH_POSTAL"
            android:title="Dutch Postal"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="FINNISH_POSTAL_4S"
            android:title="Finnish Postal 4S"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="JAPANESE_POSTAL"
            android:title="Japanese Postal"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="UK_POSTAL"
            android:title="UK Postal"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="USPLANET"
            android:title="US Planet"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="USPOSTNET"
            android:title="US Postnet"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="US4STATE"
            android:title="US 4State"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="US4STATE_FICS"
            android:title="US 4State FICS"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="MAILMARK"
            android:title="Mailmark"
            android:restrictionType="bool"
            android:defaultValue="true" />

        <!-- 2D Matrix Codes -->
        <restriction
            android:key="AZTEC"
            android:title="Aztec"
            android:restrictionType="bool"
            android:defaultValue="true" />

        <restriction
            android:key="DATAMATRIX"
            android:title="Data Matrix"
            android:restrictionType="bool"
            android:defaultValue="true" />

        <restriction
            android:key="QRCODE"
            android:title="QR Code"
            android:restrictionType="bool"
            android:defaultValue="true" />

        <restriction
            android:key="MICROQR"
            android:title="Micro QR"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="MAXICODE"
            android:title="MaxiCode"
            android:restrictionType="bool"
            android:defaultValue="true" />

        <restriction
            android:key="PDF417"
            android:title="PDF417"
            android:restrictionType="bool"
            android:defaultValue="true" />

        <restriction
            android:key="MICROPDF"
            android:title="Micro PDF"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="DOTCODE"
            android:title="DotCode"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="GRID_MATRIX"
            android:title="Grid Matrix"
            android:restrictionType="bool"
            android:defaultValue="false" />

        <restriction
            android:key="HANXIN"
            android:title="Han Xin"
            android:restrictionType="bool"
            android:defaultValue="false" />

