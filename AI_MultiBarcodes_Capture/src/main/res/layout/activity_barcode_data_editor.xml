<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataeditor.BarcodeDataEditorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/zebra"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.MultiBarcodesCapture_AB"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Edit Barcode"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_above="@id/llActions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barcode Value Section -->
            <TextView
                android:id="@+id/tvValueTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/zebra"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/barcode_value"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBarcodeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="@string/barcode_value"
                android:textSize="16sp" />

            <!-- Symbology Section -->
            <TextView
                android:id="@+id/tvSymbologyTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/zebra"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/symbology"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSymbologyValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="@string/unknown"
                android:textSize="16sp" />

            <!-- Quantity Section -->
            <TextView
                android:id="@+id/tvQuantityTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/zebra"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/quantity"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btQuantityMinus"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/zebra"
                    android:text="@string/minus"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="0dp" />

                <EditText
                    android:id="@+id/etQuantity"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/edit_text"
                    android:gravity="center"
                    android:hint="@string/quantity_hint"
                    android:inputType="numberSigned"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btQuantityPlus"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/zebra"
                    android:text="@string/plus"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="0dp" />

            </LinearLayout>

            <!-- Date Section -->
            <TextView
                android:id="@+id/tvDateTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/zebra"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/capture_date"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="@string/date"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="60dp">

        <Button
            android:id="@+id/btCancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/zebra"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btSave"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btSave"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2.5dp"
            android:backgroundTint="@color/zebra"
            android:text="@string/save"
            android:textSize="12sp"
            android:gravity="center"
            app:cornerRadius="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btCancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>