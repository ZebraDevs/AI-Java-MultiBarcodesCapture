<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - FORCED LIGHT THEME for night mode -->
    <style name="Base.Theme.AIMultiBarcodes_Capture" parent="Theme.Material3.Light.NoActionBar">
        <!-- Force same light theme appearance in night mode -->
        <item name="colorPrimary">@color/zebra</item>
        <item name="colorSecondary">@color/zebra</item>
        <item name="colorTertiary">@color/zebra</item>
        <item name="android:statusBarColor">@color/zebra</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorAccent">@color/zebra</item>
        <item name="colorControlActivated">@color/zebra</item>
        <item name="android:colorControlActivated">@color/zebra</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Force light background colors even in night mode -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- ActionBar theme - FORCED LIGHT THEME for night mode -->
    <style name="Base.Theme.AIMultiBarcodes_Capture_ActionBar" parent="Theme.Material3.Light">
        <!-- Force same light theme appearance in night mode -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/zebra</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Force light background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/zebra</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="background">@color/zebra</item>
    </style>
</resources>